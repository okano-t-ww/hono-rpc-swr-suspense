{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"],
			"server": ["../server/src/index.ts"],
			"server/*": ["../server/*"]
		}
	},
	"include": ["src/**/*"]
}
